{
  "name": "SmartHoldemClient",
  "version": "1.0.3",
  "productName": "SmartHoldemClient",
  "description": "SmartHoldem Wallet",
  "main": "main.js",
  "scripts": {
    "postinstall": "cd client && npm install && npm run bundle && cd .. && electron-builder install-app-deps && npm run rebuild",
    "rebuild": "electron-rebuild --force --module_dir . -w node-hid ",
    "electron": "electron --version",
    "start": "electron main.js -- --disableScreenshotProtection",
    "live-reload": "cross-env LIVE_RELOAD=true electron main.js",
    "pack": "build --dir",
    "dist": "npm run dist:win && npm run dist:macos && npm run dist:linux && npm run dist:win32",
    "dist-quick": "npm run dist:win && npm run dist:macos && npm run dist:linux",
    "dist:win": "build --win",
    "dist:win32": "build --win --ia32",
    "dist:macos": "build --macos",
    "dist:linux": "build --linux",
    "test": "karma start test/karma.conf.js --single-run",
    "test-app": "mocha --recursive ./test/e2e/scenarios",
    "test-watch": "karma start test/karma.conf.js",
    "eslint": "eslint \"**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SmartHoldem/SmartHoldem-Wallet.git"
  },
  "keywords": [
    "SmartHoldem",
    "Client"
  ],
  "author": {
    "name": "Smartholdem Developers",
    "email": "dev@smartholdem.io",
    "url": "https://github.com/smartholdem"
  },
  "contributors": [
    {
      "name": "SmartHoldem",
      "email": "dev@SmartHoldem.io",
      "url": "https://github.com/SmartHoldem"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SmartHoldem/SmartHoldem-Wallet/issues"
  },
  "homepage": "https://github.com/SmartHoldem/SmartHoldem-Wallet#readme",
  "dependencies": {
    "about-window": "~1.8.0",
    "async": "^2.5.0",
    "csv-parse": "^2.0.0",
    "electron-window-state": "^4.1.1",
    "elemon": "^5.0.3",
    "ledgerco": "github:ledgerhq/ledger-node-js-api#6cde5978b9d0a4922f0d33520b16cc2184559ebc",
    "moment-range": "^3.1.0",
    "moment-timezone": "^0.5.14",
    "npm": "^5.8.0",
    "q": "^1.5.0"
  },
  "devDependencies": {
    "angular-mocks": "^1.6.6",
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^5.0.5",
    "devtron": "^1.4.0",
    "electron": "^1.8.4",
    "electron-builder": "^20.9.2",
    "electron-rebuild": "^1.6.0",
    "eslint": "^4.14.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "grunt": "~1.0.1",
    "grunt-angular-gettext": "^2.3.6",
    "grunt-contrib-jshint": "~1.1.0",
    "grunt-contrib-nodeunit": "~1.0.0",
    "grunt-contrib-uglify": "~3.1.0",
    "karma": "^1.7.1",
    "karma-babel-preprocessor": "^7.0.0",
    "karma-coverage": "^1.1.1",
    "karma-electron": "^5.2.1",
    "karma-mocha": "^1.3.0",
    "karma-sinon": "^1.0.5",
    "karma-sinon-chai": "^1.3.3",
    "mocha": "3.5.3",
    "sinon": "^4.1.1",
    "sinon-chai": "^2.14.0",
    "spectron": "^3.7.2"
  },
  "build": {
    "appId": "com.smartholdemwallet.liteclient",
    "protocols": {
      "name": "SmartHoldem URI scheme",
      "schemes": [
        "smartholdem"
      ],
      "role": "Viewer"
    },
    "mac": {
      "category": "finance"
    },
    "win": {
      "target": "nsis",
      "icon": "build/smart.ico"
    },
    "linux": {
      "category": "Utility",
      "icon": "build/smart.icns",
      "description": "A Lite Client used to securely connect to the SmartHoldem network and manage your STH assets.",
      "target": [
        "deb",
        "tar.xz"
      ],
      "desktop": {
        "MimeType": "x-scheme-handler/smartholdem;"
      }
    },
    "deb": {
      "icon": "build/smart.icns",
      "synopsis": "SmartHoldem Desktop Client"
    },
    "dmg": {
      "icon": "build/icon.icns",
      "background": "build/bg.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
